<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/popwindow_shape"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="@drawable/person_info_title_shape"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="确认计算结果"
        android:gravity="center"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/calprp_show_result_infoTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/calprp_show_result_recyclerview"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:background="@drawable/dialog_lbutton_selector"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:clickable="true"
            android:id="@+id/calprp_show_result_cancelTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel" />

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <TextView
            android:background="@drawable/dialog_rbutton_selector"
            android:clickable="true"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/calprp_show_result_confirmTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm" />
    </LinearLayout>
</LinearLayout>