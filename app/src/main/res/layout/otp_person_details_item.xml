<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="16dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/otp_person_details_item_imageview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:scaleType="centerCrop"
        android:src="@drawable/line1" />

    <TextView
        android:id="@+id/otp_person_details_item_shiftname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:gravity="center_vertical"
        android:text="班次名称" />

    <TextView
        android:id="@+id/otp_person_details_item_unitamount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="50元"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/otp_person_details_item_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="10个"
        android:textSize="11sp" />



    <TextView
        android:id="@+id/otp_person_details_item_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center_vertical|end"
        android:text="12345.00"
        android:textSize="14sp" />
</LinearLayout>