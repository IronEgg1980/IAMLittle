<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="12dp"
    android:id="@+id/prpdetails_person_details_item_root"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="24dp"
        android:layout_marginRight="8dp"
        android:layout_height="16dp"
        android:scaleType="fitStart"
        android:src="@drawable/money2"/>
    <TextView
        android:id="@+id/prpdetails_person_details_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="名称"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/prpdetails_person_details_item_type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="类型"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/prpdetails_person_details_item_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:text="12345"
        android:textSize="12sp" />
</LinearLayout>