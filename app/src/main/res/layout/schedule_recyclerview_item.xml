<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorText"
    android:paddingBottom="1dp"
    >
    <TextView
        android:background="@android:color/white"
        android:layout_marginRight="1dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:id="@+id/schedule_item_nameTV"
        android:gravity="center"
        android:text="人员姓名"/>
    <TextView
        android:background="@android:color/white"
        android:layout_marginRight="1dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/schedule_item_shiftTV1"
        android:gravity="center"
        android:text="星期一"/>
    <TextView
        android:background="@android:color/white"
        android:layout_marginRight="1dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/schedule_item_shiftTV2"
        android:gravity="center"
        android:text="星期二"/>
    <TextView
        android:background="@android:color/white"
        android:layout_marginRight="1dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/schedule_item_shiftTV3"
        android:gravity="center"
        android:text="星期三"/>
    <TextView
        android:background="@android:color/white"
        android:layout_marginRight="1dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/schedule_item_shiftTV4"
        android:gravity="center"
        android:text="星期四"/>
    <TextView
        android:background="@android:color/white"
        android:layout_marginRight="1dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/schedule_item_shiftTV5"
        android:gravity="center"
        android:text="星期五"/>
    <TextView
        android:background="@android:color/white"
        android:layout_marginRight="1dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/schedule_item_shiftTV6"
        android:gravity="center"
        android:text="星期六"/>
    <TextView
        android:background="@android:color/white"
        android:layout_marginRight="1dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/schedule_item_shiftTV7"
        android:gravity="center"
        android:text="星期日"/>
    <TextView
        android:background="@android:color/white"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:id="@+id/schedule_item_noteTV"
        android:gravity="center"
        android:text="备注"/>
</LinearLayout>