<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin ="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shift_recyclerview_item_typeColor"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="@android:color/holo_orange_light" />

            <TextView
                android:id="@+id/shift_recyclerview_item_nameTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="bottom"
                android:text="班次名称"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/shift_recyclerview_item_typeTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="bottom|right"
                android:layout_marginRight="8dp"
                android:text="类型"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/shift_recyclerview_item_empty"/>
            <TextView
                android:id="@+id/shift_recyclerview_item_danweijine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:gravity="bottom"
                android:text="单位金额："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shift_recyclerview_item_unitAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:gravity="bottom"
                android:text="1000"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>