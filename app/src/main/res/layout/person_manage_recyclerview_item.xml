<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="10dp"
    android:layout_margin="12dp"
    android:id="@+id/recyclerview_item_rootview"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin ="1dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="16dp"
                android:id="@+id/person_status_color_textview"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:background="@android:color/holo_green_light" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/recyclerview_item_person_name"
                android:textSize="24sp"
                android:gravity="bottom"
                android:text="姓名"/>
            <TextView
                android:paddingRight="24dp"
                android:textSize="10sp"
                android:text="状态：在岗"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="4dp"
                android:id="@+id/person_status_text_textview"/>
            <TextView
                android:id="@+id/recyclerview_item_person_JXXS"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:text="绩效系数："/>

            <TextView
                android:id="@+id/recyclerview_item_person_ratio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:textColor="@android:color/holo_orange_light"
                android:gravity="bottom|right"
                android:text="1.2"
                android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerview_item_person_gender"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="男"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:text="1234567890"
                    android:id="@+id/recyclerview_item_person_phone"/>
                <ImageView
                    android:id="@+id/recyclerview_item_person_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_phone_green_800_48dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="16dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerview_item_person_age"
                    android:textSize="14sp"
                    android:gravity="bottom"
                    android:text="30岁"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="11sp"
                    android:gravity="bottom"
                    android:paddingLeft="20dp"
                    android:text="测试文字"
                    android:id="@+id/recyclerview_item_person_note"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>